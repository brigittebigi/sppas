{
  "id": "phonetize",
  "name": "Phonetization",
  "descr": "Converts a tokenized text into phonetic signs from a pronunciation dictionary. Requires Text Normalization.",
  "required": "textnorm",
  "api": "sppasPhon",

  "resources": [
    {
      "path": "dict",
      "type": "file",
      "ext": ".dict",
      "name": ""
    }
  ],

  "anntype": [
    "STANDALONE"
  ],

  "outformat": "ANNOT",

  "options": [
    {
      "id": "inputpattern",
      "type": "str",
      "value": "-token",
      "text": "Input file pattern (tokenization)"
    },
    {
      "id": "outputpattern",
      "type": "str",
      "value": "-phon",
      "text": "Output file pattern"
    },
    {
      "id": "phonunk",
      "type": "bool",
      "value": true,
      "text": "Let's try to phonetize unknown tokens"
    },
    {
      "id": "usestdtokens",
      "type": "bool",
      "value": false,
      "text": "Phonetize from standard tokens instead of faked tokens"
    }

  ]
}