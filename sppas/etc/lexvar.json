      "name": ""
    }
  ],

  "options": [
    {
      "id": "inputpattern",
      "type": "str",
      "value": "-palign",
      "text": "Input file pattern (time-aligned words or lemmas)"
    },
    {
      "id": "outputpattern",
      "type": "str",
      "value": "-orepet",
      "text": "Output file pattern"
    },
    {
      "id": "span",
      "type": "int",
      "value": 10,
      "text": "Span window length in number of tokens"
    },
    {
      "id": "stopwords",
      "type": "bool",
      "value": true,
      "text": "Add stop-words estimated from the given data"
    },
    {
      "id": "alpha",
      "type": "float",
      "value": 0.5,
      "text": "Coefficient to add data-specific stop-words"
    }
  ]
}
