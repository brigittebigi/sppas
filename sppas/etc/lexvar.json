{
  "id": "lexvar",
  "name" : "Speaker Lexical Variation",
  "descr": "Detect repeated sequences in two distinct files of time-aligned tokens of a speaker",
  "required": "alignment",
  "api": "sppasLexVar",

  "anntype": [
    "SPEAKER"
  ],

  "outformat": "ANNOT",

  "resources": [
    {
      "path": "vocab",
      "type": "file",
